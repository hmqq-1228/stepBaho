/* 点赞 心形动画 demo */
.myheartBox{
	margin-left:200rpx;
	margin-top:400rpx;
	position:relative;
}
.myheart{
	width: 40rpx;
	height:40rpx;
	/* position:relative;
	top: 0;
	left:0; */
	opacity:1;
	background:#f00;
	transform: rotate(45deg);
}
.myheart:before,.myheart:after{
content: '';
position: absolute;
width: inherit;
height: inherit;
background: #f00;
border-radius: 50%;
-webkit-border-radius: 50%;
}
.myheart:before{
left: -20rpx;
}
.myheart:after{
top: -20rpx;
}

.myheartGo{
	width: 40rpx;
	height:40rpx;
	position:absolute;
	top: 0;
	left:0rpx;
	opacity:1;
	background:#f00;
	transform: rotate(45deg);
}
.myheartGo:before,.myheartGo:after{
content: '';
position: absolute;
width: inherit;
height: inherit;
background: #f00;
border-radius: 50%;
-webkit-border-radius: 50%;
}
.myheartGo:before{
left: -20rpx;
}
.myheartGo:after{
top: -20rpx;
}
